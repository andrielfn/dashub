<h2>Project</h2>

<div class='new-project'>
  <%= simple_form_for @project do |f| %>
    <%= f.input :name %>

    <h3>Popular emojis</h3>
    <div class='emoji-list' id='emoji-list'>
      <% @emojis.each do |emoji| %>
        <%= content_tag :span, class: 'emoji', data: { emoji: emoji.name } do %>
          <%= emoji_tag(emoji.name, emoji.url, width: 50) %>
        <% end %>
      <% end %>
    </div>

    <div class='approval-rules'>
      <h3>Approval Rule</h3>
      <%= f.input :required_approvals, label: false, collection: 1..5, as: :select %>
      <%= f.input :approval_emoji, label: false, placeholder: 'Approval emoji', input_html: {class: 'approval-emoji', readonly: true } %>
    </div>

    <%= f.submit 'Create' %>
  <% end %>
</div>
