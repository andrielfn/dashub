<h1>Projects</h1>

<ul class="projects-list">
  <% @projects.each do |project| %>
    <li class="project-box">
      <h2 class="project-box-title"><%= link_to project.name, project_path(project) %></h2>
      <%= link_to 'Edit', edit_project_path(project) %>
      <%= link_to 'Delete', project, method: :delete, confirm: 'Are you sure?' %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create new project', new_project_path %>
